<header class="container_header">

    <div class="subHeader">
        <nav class="level container">
            <div class="level-left">
                <div class="level-item">
                    <div class="container-economie">
                        <div class="columns">
                            <div class="column is-7">
                                <p style="font-size: 10pt;padding-top: 6px;font-weight: 600;">Vos économies sont de</p>
                            </div>
                            <div class="column is-3">
                                <p class="value-economie">39 €</p>
                            </div>
                            <div class="column is-4" style="padding: 19px 12px;font-size: 9pt;font-weight: 700;">
                                <a href="">Voir détail</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="level-item">
                    <div class="columns" style="padding-top: 10px;margin-left: 5px">
                        <div class="column">
                            <img src="http://bmshop.fr/Images/Charte/Picto_Autres.png" alt="autres">
                        </div>
                        <a href="" style="margin-top: 20px; color: #7f7d74;"><p>Autres</p></a>
                    </div>
                </div>
            </div>

            <div class="level-right">
                <p style="margin-right: 15px;margin-top: 10px;" ><a href="">Contacter la centrale</a></p>
                <p class="level-item">
                    <a href="/logout" style="margin-top: 10px;" title="Se déconnecter"><img src="http://bmshop.fr/Images/Charte/Picto_SeDeconnecter.png" alt="Se déconnecter" width="30" height="32" border="0"></a>
                </p>
            </div>
        </nav>
    </div>




    <div class="first-level">
        <div id="header-logo">
            <h1>
                <a title="Achat centrale" href="/">
                    <img class="header-logo-picture" src="{{ absolute_url(asset('images/Logo/Logo_ac_home.png')) }}" alt="Achat centrale">
                </a>
            </h1>
        </div>
        <div id="header-search">
            <form class="header-search-form">
                <input type="text" class="header-search-text" autocomplete="off"
                       placeholder="Je cherche un produit, une référence..." value="">
                <button type="submit" class="header-search-button">
                    <span class="img-header-loupe"></span>
                </button>
            </form>
        </div>
        <div id="header-easy-shopping">
            <div id="header-easy-shopping-button">
                <span class="img-header-easy-shopping"></span>
                <p class="title">PROMO</p>
            </div>
        </div>
        <div id="header-account">
            <div id="header-account-button">
                <a href="#" style="text-decoration:none;" data-connexion="actif" rel="nofollow">
                    <span class="img-header-account"></span>
                    <p class="title">MON COMPTE</p>
                    <p class="sub-title">{{ app.user.CCPrenom | capitalize }}  {{ app.user.CCNom | upper }}</p>
                </a>
            </div>
            <div class="header-account-menu arrow-account-box" style="display: none;">
                <div class="header-account-menu-top">
                    <div class="columns">
                        <div class="column ">
                            <p class="mon-compte-user-detail">Bonjour <b>{{ app.user.CCPrenom | capitalize }}  {{ app.user.CCNom | capitalize }}</b></p>
                        </div>
                        <div class="column is-two-fifths">
                            <p><a href="/logout" class="mon-compte-user-logout">Déconnexion</a></p>
                        </div>
                    </div>
                </div>
                <div class="header-account-menu-detail">
                    <ul class="header-account-menu-liste">
                        <li class="mon-compte-border-li">
                            <i class="fas fa-user-circle fa-xs"></i>&nbsp;<a href="">Mon espace client</a>
                        </li>
                        <li class="mon-compte-border-li" >
                            <i class="fas fa-shopping-basket fa-xs"></i>&nbsp;<a href="">Mes commandes</a></li>
                        <li class="mon-compte-border-li" >
                            <i class="fas fa-user-lock fa-xs"></i>&nbsp;<a href="">Changer mon mot de passe</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="header-cart">
            <div id="header-cart-button">
                <a href="#" style="text-decoration:none;" rel="nofollow">
                    <span class="img-header-cart"></span>
                    <span id="qty-panier-header" class="total-product">{{ panier_count() }}</span>
                    <p class="title">PANIER</p>
                    <p class="sub-title"> <span id="total_price_cart">{{ panier_total()| number_format(2, ',', ' ') }}</span>&nbsp;€ </p>
                </a>
            </div>
            <div class="header-cart-menu arrow-box" style="display: none;">
                {% if panier_count() > 0 %}
                    <div>
                        <div class="header-cart-menu-titre">
                            <b>Mon panier <span id="qty-panier-header">{{ panier_count() }}</span></b> {{ panier_count() >= 1 ? "articles" : "article" }}

                        </div>
                        <div class="header-cart-menu-contenu">
                            <ul>
                                {% for p in panier %}
                                    <li id="pt-{{ p["PT_ID"] }}">
                                        <div class="case-panier">
                                           <div class="columns">
                                               <div class="column is-3">
                                                   <img width="70px" style="transform: translate(50%);" src="http://secure.achatcentrale.fr/UploadFichiers/Uploads/PRODUIT_{{ p["PR_ID"] }}/{{ p["LOGO"] }}" alt="">
                                               </div>
                                               <div class="column is-7 case-panier-contenu">
                                                   <span><b>{{ p["PRIX"]| number_format(2, ',', ' ') }}&nbsp;€ </b></span> <span>Quantité : {{ p["PT_QTE"] }}</span>
                                                   <br>
                                                   <a class="case-panier-contenu-nom" href="#">{{ p["NOM_PRODUITS"] | raw }}</a>
                                               </div>
                                               <div class="column is-2" style="padding-top: 30px;">
                                                   <i data-prid="{{ p["PT_ID"] }}" data-price="{{ p["PRIX"] }}" class="fas fa-trash fa-2x cursor remove-produit-panier"></i>
                                               </div>
                                           </div>
                                        </div>
                                    </li>
                                {% endfor %}
                                <li>
                                    <div class="columns">
                                        <div class="column is-pulled-left" style="margin-left: 53px;padding: 30px;">
                                            <p class="is-size-5" >Total HT</p>
                                        </div>
                                        <div class="column is-pulled-right" style="padding-top: 29px;">
                                            <p  class="is-size-5"><b><span id="total_price_cart">{{ panier_total()| number_format(2, ',', ' ') }}</span>&nbsp;€</b></p>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="header-cart-menu-bottom">
                        <a class="button is-black" href="">
                            <span><i class="fas fa-chevron-right "></i>&nbsp;Voir mon panier</span>
                        </a>
                    </div>
                {% else %}
                    <div class="header-cart-menu-empty">
                        <i class="fas fa-shopping-cart"></i>
                        <br>
                        <span style="font-weight: 600; margin-top: 10px;">Panier vide...</span>
                        <br>
                       <div class="discover-promo-btn">
                           <a href="/"  rel="nofollow">
                               Découvrez nos bons plans
                           </a>
                       </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


    <div class="nav-bar">
        <div class="menu-general">
            <ul class="menu-general-range">
                {% for r in espacePrive %}
                    <li><a href="">{{ r["CatTitre"] | raw }}</a></li>


                {% endfor %}
            </ul>
        </div>
        <div id="site-menu">
            <ul id="commercial-tree">



                {% for c in rayons %}
                    <li id="commercial-tree-item-{{ loop.index }}" class="menu_item" data-key="1">
                        <h2>
                            <a href="" class="F_Cabin Majuscule" target="_self">
                        <span>
                            {{ c["CatTitre"] | encodingFrom | raw }}
                        </span>
                            </a>
                        </h2>
                        <div class="commercial-tree-content">
                            <div id="catalog-menu-1">
                                <div class="columns">
                                    <div class="column is-four-fifths">
                                        <div class="columns sub-menu">


                                            {% for sc in c["sousCategories"] %}
                                                <div class="column">
                                                    <h3>
                                                        <a class="sub-menu-link" href="">{{ sc["CatTitre"] | encodingFrom }}</a>
                                                    </h3>
                                                    <ul class="sub-cat">
                                                        {% for ra in sc["rayon"] %}
                                                            <li><a href="{{ ra["URL"] }}">{{ ra["CatTitre"] | encodingFrom }}</a></li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            {% endfor %}

                                        </div>
                                    </div>
                                    <div class="column banners">
                                        <a href="">
                                            <img src="https://fakeimg.pl/200x350/">
                                        </a>
                                    </div>
                                    <span class="clear"></span>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}



            </ul>
        </div>
    </div>





</header>

<div class="mask-menu" style="display: none;"></div>
