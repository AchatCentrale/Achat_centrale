<header class="container_header">
    <div class="subHeader ">
        <div class="columns" style="width: 80%;;margin: auto;">
            <div class="column is-4" style="border-right: 1px solid;height: 40px;">
                <div class="container-economie">
                    <div class="columns">
                        <div class="column is-6">
                            <p style="font-size: 10pt;padding-top: 2px;font-weight: 600;">Vos économies sont de</p>
                        </div>
                        <div class="column is-3">
                            <p class="value-economie">39 €</p>
                        </div>
                        <div class="column is-3" style="padding: 14px 12px;font-size: 9pt;font-weight: 700;">
                            <a href="">Voir détail</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column is-2">
                <div class="columns">
                    <div class="column is-3" style="padding-top: 5px;">
                        <img alt="" src="http://www.centrale-funecap.fr/Images/Charte/Picto_ContactCentrale.png">
                    </div>
                    <div class="column is-9" style="border-right: 1px solid;height: 40px;padding-top: 9px;font-size: 11pt;font-weight: 600;">
                        <a href="">Contacter la centrale</a>
                    </div>
                </div>
            </div>
            <div class="column is-2">
                <div class="columns">
                    <div class="column is-5" style="padding-top: 5px;">
                        <img src="http://www.centrale-funecap.fr/Images/Charte/Picto_Autres.png" alt="">
                    </div>
                    <div class="column is-7 " style="border-right: 1px solid;height: 40px;padding-top: 7px;">
                        <a href="">Autres </a>&nbsp;<i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
            <div class="column is-2">
               <div class="columns">
                   <div class="column picto_no_currency"  >
                       <img src="http://www.centrale-funecap.fr/Images/euro_barre.png" alt="">
                   </div>
                   <div class="column">
                       <a href="/logout"><img src="http://www.centrale-funecap.fr/Images/Charte/Picto_SeDeconnecter.png" alt=""></a>
                   </div>
               </div>
            </div>
        </div>
    </div>

    <div class="first-level">
        <div id="header-logo">
            <h1>
                <a title="Achat centrale" href="/">
                    <img class="header-logo-picture"
                         src="http://v2.achatcentrale.fr/Images/Charte/Logo_AchatCentrale.jpg"
                         alt="Achat centrale">
                </a>
            </h1>
        </div>
        <div id="header-search">
            <form class="header-search-form">
                <input type="text" class="header-search-text" autocomplete="off"
                       placeholder="Je cherche un produit, une référence..." value="">
                <button type="submit" class="header-search-button">
                    <span class="img-header-loupe"></span>
                </button>
            </form>
        </div>
        <div id="header-account">
            <div id="header-account-button">
                <a href="#" style="text-decoration:none;" data-connexion="actif" rel="nofollow">
                    <span class="img-header-account"></span>
                    <p class="title">MON COMPTE</p>
                    <p class="sub-title">{{ app.user.CCPrenom | capitalize }}  {{ app.user.CCNom | upper }}</p>
                </a>
            </div>
            <div class="header-account-menu arrow-account-box" style="display: none;">
                <div class="header-account-menu-top">
                    <p><i class="fas fa-user"></i>    &nbsp;{{ app.user.CCPrenom }}  {{ app.user.CCNom }}</p>
                </div>
                <div class="header-account-menu-detail">
                    <ul class="header-account-menu-liste">
                        <li><a href="">Mon espace client</a></li>
                        <li><a href="">Mes factures</a></li>
                        <li><a href="">Gérer mes utilisateurs</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="header-cart">
            <div id="header-cart-button">
                <a href="#" style="text-decoration:none;" rel="nofollow">
                    <span class="img-header-cart"></span>
                    <span class="total-product">18</span>
                    <p class="title">PANIER</p>
                    <p class="sub-title"> 1 200 € </p>
                </a>
            </div>
            <div class="header-cart-menu arrow-box" style="display: none;">
                <div></div>
                <div class="header-cart-menu-bottom">
                    <a class="button is-black" href="">
                        <span><i class="fas fa-chevron-right "></i>   &nbsp;Voir mon panier</span>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="nav-bar">
        <div class="menu-general">
            <ul class="menu-general-range">
                {% for r in espacePrive %}
                    <li><a href="">{{ r["CatTitre"] | raw }}</a></li>


                {% endfor %}
            </ul>
        </div>
        <div class="menu-rayon">
            <ul class="liste-rayon">


                {% for c in rayons %}
                    <li class="menu_item" data-key="rayons-{{ loop.index }}">
                        <a href="">{{ c["CatTitre"] | encodingFrom | raw }}</a>
                        <div id="rayons-{{ loop.index }}" class="rayons-content" style="display: none;">
                            <div class="columns">
                                <div class="column is-four-fifths">
                                    <div class="columns sub-menu">


                                        {% for sc in c["sousCategories"] %}
                                            <div class="column">
                                                <h3>
                                                    <a class="sub-menu-link" href="">{{ sc["CatTitre"] | encodingFrom }}</a>
                                                </h3>
                                                <ul class="sub-cat">
                                                    {% for ra in sc["rayon"] %}
                                                        <li><a href="{{ ra["URL"] }}">{{ ra["CatTitre"] | encodingFrom }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        {% endfor %}

                                    </div>
                                </div>
                                <div class="column banners">
                                    <a href="">
                                        {#                                        <img src="https://fakeimg.pl/200x350/">#}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

</header>

<div class="mask-menu" style="display: none;"></div>
