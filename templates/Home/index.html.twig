{% extends 'base.html.twig' %}


{% block title %}Home{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css"/>

{% endblock %}


{% block body %}


    {% include 'Home/partials/header.html.twig' with {'rayons' : rayons, 'espacePrive' : espacePrive} %}



    <div class="site-content">

        <div class="welcome-container">
            <div class="columns">
                <div class="column is-four-fifths">
                    <h1>Bienvenue <b>Laurent Guiochet</b></h1>
                </div>
                <div class="column">
                    <img src="http://v2.achatcentrale.fr/UploadFichiers/Uploads/CLIENT_1260/a-and-a-logo-1.png" alt="Logo" width="50px" height="50" style="margin-left: 55%;">
                </div>
            </div>
        </div>


        <div class="slider-promo">
            <div class="your-class">
                {% for s in slider %}
                    <div>
                        <img src="http://secure.achatcentrale.fr/UploadFichiers/Uploads/SLIDERS/{{ s["SL_SLIDE"] }}" alt="">
                    </div>
                {% endfor %}


            </div>
        </div>


        <div class="container-promo">

            {% for p in produits %}
                <div class="promo">

                    <div class="title-promo">
                        <div class="columns">
                            <div class="column">
                                <div class="ligne"></div>
                            </div>
                            <div class="column has-text-centered">
                                <div>
                                    {{ p["PPC_DESCR"] | categHome | raw }}
                                </div>
                            </div>
                            <div class="column">
                                <div class="ligne"></div>
                            </div>
                        </div>


                        <div class="columns">
                            <div class="slider-categ">

                                <div id="main-wrap" class="main-wrap gallery-mode">
                                    <div id="gallery-item">
                                        <div id="list-items" class="clearfix temp-height lazy-load">

                                            <ul class="util-clearfix son-list ">
                                                {% for produit in p["produits"] %}

                                                    <li class="list-item list-item-first ">

                                                        <div class="item">
                                                            <div class="img img-border">
                                                                <div class="pic">
                                                                    <a class="picRind " href="" target="_blank">
                                                                        <img class="picCore pic-Core-v" src="{{ produit["PR_ID"] | product_pic }}" alt="">
                                                                    </a>
                                                                </div>
                                                            </div>

                                                            <div class="has-sku-image">
                                                                <a class="" href="" title="" target="_blank" >4 Couleurs Disponibles</a>
                                                            </div>

                                                            <div class="info">

                                                                <h3>
                                                                    <a class="product " href="" target="_blank" >{{ produit["PR_NOM"] | raw }}</a>
                                                                </h3>

                                                                <span class="price price-m">
                                                                    <span class="value" itemprop="price">{{ produit["PR_PRIX_PUBLIC"] }} €</span>
                                                                    <span class="separator">/</span>
                                                                    <span class="unit">{{ produit["PR_CONDT"] }}</span>
                                                                </span>
                                                                <div class="has-sku-image">
                                                                    {% if produit["PR_TYPE_LIEN"] == 'ACHETER' %}
                                                                        <a class="" href="" title="" target="_blank" >ACHETER</a>
                                                                    {% elseif produit["PR_TYPE_LIEN"] == 'DEVIS' %}
                                                                        <a class="" href="" title="" target="_blank" >DEVIS</a>
                                                                    {% elseif produit["PR_TYPE_LIEN"] == 'WEB' %}
                                                                        <a class="" href="" title="" target="_blank" >WEB</a>
                                                                    {% endif%}
                                                                </div>

                                                            </div>
                                                            <div class="info-more">
                                                                {% if produit["PR_DECLINAISON"] %}

                                                                    {{ produit["PR_ID"] | declinaison }}
                                                                {% else %}
                                                                    <p>Il n'y a pas de déclinaisons</p>


                                                                {% endif%}

                                                               <p><small>{{ produit["PR_DESCR_COURTE"] | raw }}</small></p>
                                                            </div>
                                                        </div>


                                                    </li>

                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}



        </div>



    </div>

{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
    <script src="{{ asset('assets/js/Slider.js') }}"></script>
{% endblock %}